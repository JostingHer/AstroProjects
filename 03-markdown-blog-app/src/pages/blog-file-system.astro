---
import { getCollection } from "astro:content";
import { siteConfig } from "@config/site-config";
import MainLayout from "../layouts/MainLayout.astro";
import BlogPost from "src/components/BlogPost.astro";

// const blogPosts = await getCollection(".blog");
const blogPosts = await Astro.glob("../content/blog/*");

//console.log("consulta de files system md", blogPosts);
---

<MainLayout title="Fernando's Blog">
  <!-- component -->
  <section class='bg-gray-900"'>
    <div class="container px-6 py-10 mx-auto">
      <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">
        {siteConfig.title}
        <br />
        {siteConfig.description}
      </h1>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {blogPosts.map((post) => <BlogPost {...post} />)}
      </div>
    </div>
  </section>
</MainLayout>
