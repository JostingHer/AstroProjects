{
  "extends": "astro/tsconfigs/strict",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*" : ["./src/components/*"],
      "@layouts/*" : ["./src/layouts/*"],
      "@styles" : ["./src/styles/*"],
      "@utils/*" : ["./src/utils/*"],
      "@hooks/*" : ["./src/hooks/*"],
      "@types/*" : ["./src/types/*"],
      "@pages/*" : ["./src/pages/*"],
      "@data/*" : ["./src/data/*"],
      "@images/*" : ["./src/images/*"],
      "@lib/*" : ["./src/lib/*"],
      "@config/*" : ["./src/config/*"],
      "@content/*" : ["./src/content/*"],
      "@images/*" : ["./src/assets/images/*"]
      
    }
  }

}
